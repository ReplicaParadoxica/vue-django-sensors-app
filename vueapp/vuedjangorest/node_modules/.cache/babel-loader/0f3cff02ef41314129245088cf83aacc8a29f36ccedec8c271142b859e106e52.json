{"ast":null,"code":"import axios from 'axios';\nexport default {\n  name: 'SensorList',\n  data() {\n    return {\n      sensors: [],\n      sortBy: null,\n      sortDesc: false,\n      searchText: '',\n      columns: ['id', 'name', 'type', 'variant'] // list of columns to filter on\n    };\n  },\n\n  methods: {\n    loadSensors() {\n      axios.get('http://localhost:8000/api/sensors/').then(response => {\n        this.sensors = response.data;\n      }).catch(error => {\n        console.log(error);\n      });\n    },\n    sort(column) {\n      if (this.sortBy === column) {\n        this.sortDesc = !this.sortDesc;\n      } else {\n        this.sortBy = column;\n        this.sortDesc = false;\n      }\n      this.sensors.sort((a, b) => {\n        let aValue = a[this.sortBy];\n        let bValue = b[this.sortBy];\n        if (typeof aValue === 'string' && typeof bValue === 'string') {\n          aValue = aValue.toLowerCase();\n          bValue = bValue.toLowerCase();\n        }\n        if (aValue === bValue) {\n          return 0;\n        } else if (aValue < bValue) {\n          return this.sortDesc ? 1 : -1;\n        } else {\n          return this.sortDesc ? -1 : 1;\n        }\n      });\n    }\n  },\n  computed: {\n    filteredSensors() {\n      const searchText = this.searchText.toLowerCase();\n      return this.sensors.filter(sensor => {\n        return this.columns.some(column => {\n          const value = sensor[column];\n          if (typeof value === 'string') {\n            return value.toLowerCase().includes(searchText);\n          } else {\n            return false;\n          }\n        });\n      });\n    }\n  },\n  mounted() {\n    this.loadSensors();\n  }\n};","map":{"version":3,"names":["axios","name","data","sensors","sortBy","sortDesc","searchText","columns","methods","loadSensors","get","then","response","catch","error","console","log","sort","column","a","b","aValue","bValue","toLowerCase","computed","filteredSensors","filter","sensor","some","value","includes","mounted"],"sources":["src/views/Table.vue"],"sourcesContent":["<template>\r\n    <div>\r\n        <h2>Sensors</h2>\r\n        <div class=\"search-container\">\r\n            <input v-model=\"searchText\" type=\"text\" placeholder=\"Search by sensor name\">\r\n        </div>\r\n        <table>\r\n            <thead>\r\n                <tr>\r\n                    <th @click=\"sort('id')\">id</th>\r\n                    <th @click=\"sort('name')\">Name</th>\r\n                    <th @click=\"sort('type')\">Type</th>\r\n                    <th @click=\"sort('variant')\">Variant</th>\r\n                    <th>Actions</th>\r\n                </tr>\r\n            </thead>\r\n            <tbody>\r\n                <tr v-for=\"(sensor, index) in filteredSensors\" :key=\"index\">\r\n                    <td>{{ sensor.id }}</td>\r\n                    <td>{{ sensor.name }}</td>\r\n                    <td>{{ sensor.type }}</td>\r\n                    <td>{{ sensor.variant }}</td>\r\n                    <td>\r\n                        <router-link :to=\"{ path: `/api/sensors/${sensor.id}/` }\" class=\"view-link\">\r\n                            View\r\n                        </router-link>\r\n                    </td>\r\n                </tr>\r\n            </tbody>\r\n        </table>\r\n    </div>\r\n</template>\r\n  \r\n<script>\r\nimport axios from 'axios';\r\n\r\nexport default {\r\n    name: 'SensorList',\r\n    data() {\r\n        return {\r\n            sensors: [],\r\n            sortBy: null,\r\n            sortDesc: false,\r\n            searchText: '',\r\n            columns: ['id', 'name', 'type', 'variant'], // list of columns to filter on\r\n        };\r\n    },\r\n    methods: {\r\n        loadSensors() {\r\n            axios\r\n                .get('http://localhost:8000/api/sensors/')\r\n                .then((response) => {\r\n                    this.sensors = response.data;\r\n                })\r\n                .catch((error) => {\r\n                    console.log(error);\r\n                });\r\n        },\r\n        sort(column) {\r\n            if (this.sortBy === column) {\r\n                this.sortDesc = !this.sortDesc;\r\n            } else {\r\n                this.sortBy = column;\r\n                this.sortDesc = false;\r\n            }\r\n\r\n            this.sensors.sort((a, b) => {\r\n                let aValue = a[this.sortBy];\r\n                let bValue = b[this.sortBy];\r\n\r\n                if (typeof aValue === 'string' && typeof bValue === 'string') {\r\n                    aValue = aValue.toLowerCase();\r\n                    bValue = bValue.toLowerCase();\r\n                }\r\n\r\n                if (aValue === bValue) {\r\n                    return 0;\r\n                } else if (aValue < bValue) {\r\n                    return this.sortDesc ? 1 : -1;\r\n                } else {\r\n                    return this.sortDesc ? -1 : 1;\r\n                }\r\n            });\r\n        },\r\n    },\r\n    computed: {\r\n        filteredSensors() {\r\n            const searchText = this.searchText.toLowerCase();\r\n            return this.sensors.filter((sensor) => {\r\n                return this.columns.some((column) => {\r\n                    const value = sensor[column];\r\n                    if (typeof value === 'string') {\r\n                        return value.toLowerCase().includes(searchText);\r\n                    } else {\r\n                        return false;\r\n                    }\r\n                });\r\n            });\r\n        },\r\n    },\r\n    mounted() {\r\n        this.loadSensors();\r\n    },\r\n};\r\n</script>\r\n  \r\n  \r\n\r\n<style scoped>\r\n/* Add your styles here */\r\nh2 {\r\n    font-size: 24px;\r\n    font-weight: bold;\r\n    margin-bottom: 16px;\r\n}\r\n\r\n.search-container {\r\n    margin-bottom: 16px;\r\n}\r\n\r\ntable {\r\n    width: 100%;\r\n    border-collapse: collapse;\r\n}\r\n\r\nth,\r\ntd {\r\n    padding: 8px;\r\